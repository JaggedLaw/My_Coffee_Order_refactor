<div class="col s3" id="butooon">
  <%= button_to admin_dashboard_index_path, method: :get, class: "waves-effect waves-light btn black btn right" do %>
    <i class="">Back To Admin Dashboard</i>
  <% end %>
</div>

<h1>Edit Items</h1>

<div class="col s3" id="butooon">
  <%= button_to admin_items_path, method: :get, class: "waves-effect waves-light btn amber darken-2 btn right" do %>
    <i class="">Back to Menu</i>
  <% end %>
</div>

<%= form_for(@item, url: admin_item_path) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.label :image %>
<%= f.text_field :image %>
<%= f.submit 'Update Item', class: "btn amber darken-3" %>
<% end %>
<br>
<%= button_to 'Delete Item', admin_item_path(@item), :method => :delete, class: "btn amber darken-3" %>
