<table class="container">
  <thead>
    <tr>
      <th data-field="name">Item Name</th>
      <th data-field="price"> Price</th>
      <th data-field="image">Image</th>
      <th data-field="description">Description</th>
      <!-- <th data-field="add to cart">Add to Cart</th> -->
    </tr>
  </thead>

<%@items.each do |item| %>
  <tbody>
    <tr>
      <div id="item<%="#{item.id}"%>">
        <td><%= item.title %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= image_tag(item.image, height: '100') %></td>
        <td><%= item.description %></td>
        <td><%=button_to "Edit Item", edit_admin_item_path(item), class: "btn amber darken-3", method: :get %></td>
      </div>
<% end %>

